@page "/demo/chip-tag"

<div class="px-3">
    <div>
        <div class="flex-row flex-wrap">
            <ComponentInfo Type="typeof(LxChip)" />
            <ComponentInfo Type="typeof(LxTag)" />
            <ComponentInfo Type="typeof(LxSortTag)" />
        </div>
    </div>
    <Demo>
        <Content>
            <div class="flex-row flex-wrap mb-3">
                <LxChip Label="Horse" 
                        Icon="static://person" 
                        Appearance="Appearance.Raised" 
                        Size="Size" 
                        IsEnabled="IsEnabled" />
                <LxSeparator Class="my-1 mx-2" />
                <LxTag Label="Zebra" 
                       Icon="static://arrow_upward" 
                       Size="Size" 
                       IsEnabled="IsEnabled" />
                <LxSeparator Class="my-1 mx-2" />
                <LxTag Label="Parrot" 
                       IsActive="true" 
                       Appearance="Appearance.Normal" 
                       Size="Size" 
                       IsEnabled="IsEnabled"
                       IsRemovable="true" />
                <LxSeparator Class="my-1 mx-2" />
                <LxSortTag Label="Name" 
                           IsStatic="true" 
                           Size="Size"
                           IsEnabled="IsEnabled" />
                <LxSeparator Class="my-1 mx-2" />
                <LxSortTag Label="Creation date" 
                           Size="Size" 
                           IsRemovable="true"
                           IsEnabled="IsEnabled" />
            </div>
            <div class="flex-row flex-wrap">
                <LxChip Label="@Label"
                        Icon="@(ShowIcon ? "static://today" : null)"
                        Appearance="Appearance"
                        Size="Size"
                        IsStatic="IsStatic"
                        IsRemovable="IsRemovable"
                        IsEnabled="IsEnabled"
                        @bind-IsActive="IsActive" />
                <LxSeparator Class="my-1 mx-2" />
                <LxTag Label="@Label"
                       Icon="@(ShowIcon ? "static://today" : null)"
                       Appearance="Appearance"
                       Size="Size"
                       IsStatic="IsStatic"
                       IsRemovable="IsRemovable"
                       IsEnabled="IsEnabled"
                       @bind-IsActive="IsActive" />
                <LxSeparator Class="my-1 mx-2" />
                <LxSortTag Label="@Label"
                           Appearance="Appearance"
                           Size="Size"
                           IsStatic="IsStatic"
                           IsRemovable="IsRemovable"
                           IsEnabled="IsEnabled"
                           @bind-Direction="SortDirection" />
            </div>
        </Content>
        <Customization>
            <Entry Text="Label">
                <LxInput Placeholder="Enter label ..."
                         @bind-Value="Label" />
            </Entry>
            <Entry Text="Size">
                <LxSelect Items="Enum.GetValues(typeof(ComponentSize)).Cast<ComponentSize>()"
                          Converter="DefaultOptionConverter<ComponentSize>.Instance"
                          Placeholder="Nothing selected"
                          @bind-Value="Size" />
            </Entry>
            <Entry Text="Appearance">
                <LxSelect Items="Enum.GetValues(typeof(Appearance)).Cast<Appearance>()"
                          Converter="DefaultOptionConverter<Appearance>.Instance"
                          Placeholder="Nothing selected"
                          @bind-Value="Appearance" />
            </Entry>
            <Entry Text="Sort direction">
                <LxSelect Items="Enum.GetValues(typeof(SortDirection)).Cast<SortDirection>()"
                          Converter="DefaultOptionConverter<SortDirection>.Instance"
                          Placeholder="Nothing selected"
                          @bind-Value="SortDirection" />
            </Entry>
            <Entry Text="Active">
                <LxToggle @bind-Value="IsActive" />
            </Entry>
            <Entry Text="Removable">
                <LxToggle @bind-Value="IsRemovable" />
            </Entry>
            <Entry Text="Static">
                <LxToggle @bind-Value="IsStatic" />
            </Entry>
            <Entry Text="Enabled">
                <LxToggle @bind-Value="IsEnabled" />
            </Entry>
            <Entry Text="Show icon">
                <LxToggle @bind-Value="ShowIcon" />
            </Entry>
        </Customization>
    </Demo>
</div>

@code{ 

    private ComponentSize Size { get; set; } = ComponentSize.Medium;

    private Appearance Appearance { get; set; } = Appearance.Normal;

    private SortDirection SortDirection { get; set; } = SortDirection.None;

    public string Label { get; set; } = "Today";

    public bool IsActive { get; set; }

    public bool IsRemovable { get; set; }

    public bool IsStatic { get; set; }

    public bool IsEnabled { get; set; } = true;

    public bool ShowIcon { get; set; }

}